<BlockGenus name="ifelse" kind="command" initlabel="Branch"
	color="255 80 0">
	<BlockConnectors>
		<BlockConnector label="Condition" connector-kind="socket"
			connector-type="boolean">
			<DefaultArg genus-name="equals-number" label="equal"></DefaultArg>
		</BlockConnector>
		<BlockConnector label="true" connector-kind="socket"
			connector-type="cmd">
		</BlockConnector>
		<BlockConnector label="false" connector-kind="socket"
			connector-type="cmd"></BlockConnector>
	</BlockConnectors>
	<LangSpecProperties>
		<LangSpecProperty key="vm-cmd-name" value="ifelse"></LangSpecProperty>
	</LangSpecProperties>
</BlockGenus>

<BlockGenus name="while" kind="command" initlabel="Repeat" color="255 80 0">
	<BlockConnectors>
		<BlockConnector label="untill" connector-kind="socket"
			connector-type="boolean">
			<DefaultArg genus-name="lessthanorequalto" label="≦"></DefaultArg>
		</BlockConnector>
		<BlockConnector label="true" connector-kind="socket"
			connector-type="cmd"></BlockConnector>
	</BlockConnectors>
	<LangSpecProperties>
		<LangSpecProperty key="vm-cmd-name" value="repeat"></LangSpecProperty>
	</LangSpecProperties>
</BlockGenus>

<BlockGenus name="dowhile" kind="command" initlabel="Repeat once more" color="255 80 0">
